# Ignore Ruby configuration and generated files
*.rbc
.rspec
.rvmrc
.bundle

# Ignore Capybara and pickle-generated files
capybara-*.html
pickle-email-*.html

# Ignore SQLite3 databases and related files
/db/*.sqlite3
/db/*.sqlite3-journal
/db/*.sqlite3-[0-9]*

# Ignore logs and temporary files
/log/*
/tmp/*
!/log/.keep
!/tmp/.keep

# Ignore secret and configuration files
config/initializers/secret_token.rb
config/master.key
.env
.env*.local
.env*.erb

# Ignore environment normalization files
/vendor/bundle
/.bundle

# Ignore bower files if using bower-rails
/vendor/assets/bower_components
*.bowerrc
bower.json

# Ignore pow environment settings
.powenv

# Ignore Byebug command history file
.byebug_history

# Ignore node modules and yarn files
node_modules/
yarn-error.log
yarn-debug.log*
.yarn-integrity

# Ignore precompiled JavaScript packs and assets
/public/packs
/public/packs-test
/public/assets

# Ignore uploaded files in development
/storage/*
!/storage/.keep
/public/uploads

# Ignore pidfiles, but keep the directory
/tmp/pids/*
!/tmp/pids/
!/tmp/pids/.keep

# Ignore storage (uploaded files in development and any SQLite databases)
.tmp/storage/*
!/tmp/storage/
!/tmp/storage/.keep

# Ignore app assets builds
/app/assets/builds/*
!/app/assets/builds/.keep